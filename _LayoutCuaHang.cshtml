            function updateCheckoutDisplay() {
                const container = document.getElementById('checkout-items');
                const subtotalEl = document.getElementById('checkout-subtotal');
                const totalEl = document.getElementById('checkout-total');

                container.innerHTML = '';

                let subtotal = 0;

                if (cart.length === 0) {
                    container.innerHTML = '<p>Giỏ hàng của bạn đang trống</p>';
                } else {
                    cart.forEach(item => {
                        const itemTotal = item.price * item.quantity;
                        subtotal += itemTotal;

                        const checkoutItem = document.createElement('div');
                        checkoutItem.className = 'order-product';
                        checkoutItem.innerHTML = `
                                <img src="${item.image}" alt="${item.name}" class="order-product-image">
                                <div class="order-product-details">
                                    <div>${item.name}</div>
                                    <div>${formatPrice(item.price)}đ x ${item.quantity}</div>
                                </div>
                            `;
                        container.appendChild(checkoutItem);
                    });
                }

                subtotalEl.textContent = formatPrice(subtotal) + 'đ';
                totalEl.textContent = formatPrice(subtotal) + 'đ';
            }

            function placeOrder() {
                if (cart.length === 0) {
                    alert('Giỏ hàng của bạn đang trống!');
                    return;
                }

                // Generate order ID
                const orderId = 'DH' + Math.floor(100000 + Math.random() * 900000);

                // Calculate total
                const total = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);

                // Create order
                const order = {
                    id: orderId,
                    date: new Date().toLocaleDateString('vi-VN'),
                    items: [...cart],
                    total: total,
                    status: 'pending'
                };

                // Add to orders
                orders.push(order);

                // Update order success page
                document.getElementById('order-id').textContent = orderId;
                document.getElementById('order-total').textContent = formatPrice(total) + 'đ';

                // Clear cart
                cart = [];
                updateCartDisplay();

                // Show success page
                showPage('order-success');
            }

